<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/yellow" /> <!-- Background color of the shape -->
            <!-- Rounded corners -->
            <corners android:radius="60dp"/> <!-- Adjust this value for the desired roundness -->
            <stroke
                android:width="2dp"
                android:color="@color/yellow" /> <!-- Border color and width -->
        </shape>
    </item>
</selector>
