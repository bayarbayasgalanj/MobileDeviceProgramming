<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:navigationIcon="@drawable/ic_back_arrow" />


    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome [user email]"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>

    <!-- Title for category section -->
    <TextView
        android:id="@+id/categoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop by Categories"
        android:layout_below="@id/welcomeTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <!-- Electronics Image -->
    <ImageView
        android:id="@+id/electronicsImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/electronics_image"
        android:layout_below="@id/categoryTitle"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@+id/clothingImageView" />

    <!-- Electronics Label -->
    <TextView
        android:id="@+id/electronicsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Electronics"
        android:layout_below="@id/electronicsImageView"
        android:layout_alignStart="@id/electronicsImageView"
        android:layout_marginTop="8dp" />

    <!-- Clothing Image -->
    <ImageView
        android:id="@+id/clothingImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/clothing_image"
        android:layout_below="@id/categoryTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <!-- Clothing Label -->
    <TextView
        android:id="@+id/clothingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clothing"
        android:layout_below="@id/clothingImageView"
        android:layout_alignStart="@id/clothingImageView"
        android:layout_marginTop="8dp" />

    <!-- Beauty Image -->

    <!-- Beauty Label -->

    <ImageView
        android:id="@+id/beautyImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/categoryTitle"
        android:layout_marginStart="-204dp"
        android:layout_marginTop="144dp"
        android:layout_toEndOf="@+id/clothingImageView"
        android:src="@drawable/beauty_image" />

    <TextView
        android:id="@+id/beautyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beauty"
        android:layout_below="@id/beautyImageView"
        android:layout_alignStart="@id/beautyImageView"
        android:layout_marginTop="8dp" />

    <!-- Food Image -->

    <!-- Food Label -->

    <ImageView
        android:id="@+id/foodImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/electronicsImageView"
        android:layout_alignStart="@id/electronicsImageView"
        android:layout_marginStart="107dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/food_image" />

    <TextView
        android:id="@+id/foodLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        android:layout_below="@id/foodImageView"
        android:layout_alignStart="@id/foodImageView"
        android:layout_marginTop="8dp" />

    <!-- More ImageView and TextView pairs can be added here for additional categories -->

</RelativeLayout>
